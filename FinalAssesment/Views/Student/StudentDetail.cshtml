@model FinalAssesment.Models.Student
@using FinalAssesment.Controllers;

@{
    ViewData["Title"] = "StudentDetail";
    Layout = "~/Views/Shared/StudentDetail.cshtml";
}

<h2>StudentDetail</h2>

<div>
    <div class="col-md-6">
        <div>
            <h4>@Model.FirstName</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RollNo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RollNo)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Subject)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Section)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Section)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ProfilePicture)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProfilePicture)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Cv)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Cv)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="AllStudents" class="btn btn-primary"><span class="glyphicon glyphicon-list"></span> All Students</a> |
            <a asp-action="EditStudent" asp-route-id="@Model.Id" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span> Edit Student</a>
            <a asp-action="DeleteStudent" asp-route-id="@Model.Id" class="btn btn-danger"><span class="glyphicon glyphicon-floppy-remove"></span> Delete Student</a>
        </div>
    </div>

    <div class="col-md-6" id="StudentsNamesDiv">
    </div>
</div>


<div id="AdDiv">
</div>

@section Scripts
    {
    <script>
        $(function () {

            $('#AdDiv').load("/Student/ShowAd");
            $('#StudentsNamesDiv').load('@nameof(StudentController.GetStudentsNames)');

        });

    </script>
}
